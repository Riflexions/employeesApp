<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Department Registration</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 col-lg-4 col-sm-6 col-xs-9 control-label" for="name">Department Name</label>
            <div class="col-md-4 col-lg-4 col-sm-6 col-xs-9">
                {{input type="text" value=name placeholder="Enter department name" class="form-control input-md"}}
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="submit"></label>
            <div class="col-md-4">
                <button {{action "save"}} name="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </fieldset>
</form>
